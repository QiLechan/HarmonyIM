<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <TextView
        ohos:id="@+id/tips1"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="16dp"
        ohos:layout_marginTop="220dp"
        ohos:text="$string:UserInput"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

    <EditText
        ohos:id="@+id/UserSendMessage"
        ohos:layout_width="182dp"
        ohos:layout_height="48dp"
        ohos:layout_marginStart="16dp"
        ohos:layout_marginTop="204dp"
        ohos:autofillHints=""
        ohos:ems="10"
        ohos:inputType="textPersonName"
        ohos:layout_constraintStart_toEndOf="@+id/tips1"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Button
        ohos:id="$+id:button2"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="16dp"
        ohos:layout_marginTop="272dp"
        ohos:text="$string:ConnectButton"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Button
        ohos:id="$+id:button4"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="16dp"
        ohos:layout_marginTop="272dp"
        ohos:text="$string:ChangeToSettingActivity"
        ohos:layout_constraintEnd_toStartOf="@+id/button3"
        ohos:layout_constraintHorizontal_bias="0.23"
        ohos:layout_constraintStart_toEndOf="@+id/button2"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Button
        ohos:id="$+id:button3"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="192dp"
        ohos:layout_marginTop="272dp"
        ohos:text="$string:DisconnectButton"
        ohos:layout_constraintStart_toEndOf="@+id/button2"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Group
        ohos:id="@+id/group"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:constraint_referenced_ids="button2" />

    <Button
        ohos:id="$+id:button6"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="148dp"
        ohos:layout_marginTop="140dp"
        ohos:text="$string:ClearSocketDisplay"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        ohos:id="@+id/DisplayUsedKey"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="22dp"
        ohos:layout_marginTop="372dp"
        ohos:text="$string:UsedKeyPrefix"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Button
        ohos:id="$+id:button8"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="307dp"
        ohos:layout_marginTop="205dp"
        ohos:text="$string:SendButton"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        ohos:id="$+id:ScrollView"
        ohos:layout_width="406dp"
        ohos:layout_height="129dp"
        ohos:layout_marginStart="1dp"
        ohos:layout_marginTop="4dp"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            ohos:layout_width="match_parent"
            ohos:layout_height="wrap_content"
            ohos:orientation="vertical">

            <TextView
                ohos:id="@+id/ChatLog"
                ohos:layout_width="409dp"
                ohos:layout_height="133dp" />
        </LinearLayout>
    </ScrollView>

    <Toolbar
        ohos:id="@+id/toolbar"
        ohos:layout_width="0dp"
        ohos:layout_height="0dp"
        ohos:minHeight="?attr/actionBarSize"
        ohos:theme="?attr/actionBarTheme"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

    <Button
        ohos:id="$+id:debugbutton"
        ohos:layout_width="wrap_content"
        ohos:layout_height="wrap_content"
        ohos:layout_marginStart="262dp"
        ohos:layout_marginTop="462dp"
        ohos:text="Debug"
        ohos:layout_constraintStart_toStartOf="parent"
        ohos:layout_constraintTop_toTopOf="parent" />

</LinearLayout>